@model CMCS_WebApplication.Models.Claim

@{
    ViewData["Title"] = "ClaimSubmission";
}

<!--Help with learning and understanding the HTML and CSS on this page: (W3Schools, n.d.)-->

<h2><center>Submit a New Claim</h2>

<!--Form for claim submission, will prevent a claim from being made if the fields arnt filled or filled by numbers, also will prevent form submission if no file has been selected-->
<form method="post" class="form-style">
    <label for="hours">Lecturer ID:</label>
    <input name="lecturerID" id="LecturerID" required><br><br>

    <label for="hours">Hours Worked:</label>
    <input type="number" id="hrswrk" name="hoursWorked" required><br><br>

    <label for="wages">Hourly Rate:</label>
    <input type="number" id="hrlyrate" name="hourlyRate" required><br><br>

    <label for="file">Select File (e.g., documents):</label>
    <input type="file" id="file" name="file" class="hidden" required><br><br>

    <button type="submit" class="btn-lg">Submit Claim</button>
</form>

<!--Styling for the Claim submission page (W3Schools, n.d.)-->
<style>
    .container {
        max-width: 600px; 
        margin: 0 auto; 
    }

    .form-style {
        background-color: lightblue;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        margin-bottom: 20px;
    }

    .btn-lg {
        padding: 12px 20px;
        font-size: 18px;
        background-color: lightgreen;
    }


    .form-group {
        margin-bottom: 20px;
    }

</style>